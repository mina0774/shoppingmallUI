<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".wishlist.topbarFragment.WishlistShopFragment">

    <!--찜한 샵이 없을 때-->
    <RelativeLayout
        android:id="@+id/have_not_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/shop_image"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_centerInParent="true"
            android:src="@drawable/wishlist_shop" />

        <Button
            android:id="@+id/wishlist_shop_togo_shop_ranking"
            android:layout_below="@id/shop_image"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@drawable/round_rectange_color"
            android:layout_centerHorizontal="true"
            android:text="베스트 마켓 보러가기"
            android:textColor="#ffffff"
            android:textSize="12sp"/>
    </RelativeLayout>


</FrameLayout>